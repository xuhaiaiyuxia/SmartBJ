<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itheima.smart.beijing.activity.HomeActivity">

    <com.itheima.smart.beijing.view.NoScollerViewPager
        android:id="@+id/vp_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RadioGroup
        android:id="@+id/rg_btns"
        android:background="@drawable/bottom_tab_bg"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_home_first"
            android:drawableTop="@drawable/selector_tab_home"
            style="@style/group_btn_style"
            android:text="首页"
            />

        <RadioButton
            android:id="@+id/rb_news"
            android:drawableTop="@drawable/selector_tab_news"
            style="@style/group_btn_style"
            android:text="新闻中心"
            />

        <RadioButton
            android:id="@+id/rb_smart_service"
            android:drawableTop="@drawable/selector_tab_smart_service"
            style="@style/group_btn_style"
            android:text="智慧服务"
            />

        <RadioButton
            android:id="@+id/rb_govaffairs"
            android:drawableTop="@drawable/selector_tab_govaffairs"
            style="@style/group_btn_style"
            android:text="政务"
            />

        <RadioButton
            android:id="@+id/rb_setting"
            android:drawableTop="@drawable/selector_tab_smart_setting"
            style="@style/group_btn_style"
            android:text="设置中心"
            />
    </RadioGroup>

</RelativeLayout>
